# üîê ENVIRONMENT VARIABLES - DomainSeek.ai
# Copy this file to .env.local and fill in your actual values

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL connection string (from Render or local)
DATABASE_URL="postgresql://user:password@host:5432/domainseek_db"

# ==========================================
# REDIS CACHE (Upstash)
# ==========================================
# Get from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# ==========================================
# AI - ANTHROPIC CLAUDE
# ==========================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-api03-xxx"

# ==========================================
# DOMAIN CHECKING - NAMECHEAP API (Primary)
# ==========================================
# Get from: https://www.namecheap.com/myaccount/api/
# Free with account - Bulk checking (50 domains/request)
# Enables: Fast bulk checking + Integrated purchasing + 20% affiliate commission
NAMECHEAP_API_USER="your-namecheap-username"
NAMECHEAP_API_KEY="your-api-key-here"
NAMECHEAP_USERNAME="your-namecheap-username"
NAMECHEAP_CLIENT_IP="your-whitelisted-ip"

# ==========================================
# DOMAIN CHECKING - DOMAINR (Fallback)
# ==========================================
# Get from: https://rapidapi.com/domainr/api/domainr
# Free tier: 10,000 requests/month
DOMAINR_API_KEY="your-rapidapi-key"

# ==========================================
# HOSTING AFFILIATES
# ==========================================
# Get from hosting provider affiliate programs
HOSTINGER_AFFILIATE_ID="your-hostinger-id"
BLUEHOST_AFFILIATE_ID="your-bluehost-id"
CLOUDWAYS_AFFILIATE_ID="your-cloudways-id"

# ==========================================
# DOMAIN AFFILIATES
# ==========================================
# Get from domain registrar affiliate programs
NAMECHEAP_AFFILIATE_ID="your-namecheap-id"
GODADDY_AFFILIATE_ID="your-godaddy-id"

# ==========================================
# APP CONFIGURATION
# ==========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="DomainSeek"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ==========================================
# SECURITY
# ==========================================
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"
SESSION_SECRET="your-session-secret-here"

# ==========================================
# ANALYTICS (Optional)
# ==========================================
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# ==========================================
# MONITORING (Optional)
# ==========================================
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ==========================================
# FREEMIUM / PAYMENTS (Optional - for later)
# ==========================================
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# ==========================================
# RATE LIMITING
# ==========================================
# Max requests per minute per IP
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW="1 m"

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_FREEMIUM="true"
ENABLE_HOSTING_UPSELLS="true"
ENABLE_WEBSOCKET="false"
ENABLE_ANALYTICS="true"

# ==========================================
# COST LIMITS (Safety)
# ==========================================
CLAUDE_MONTHLY_BUDGET=100
DOMAINR_DAILY_LIMIT=333
ALERT_EMAIL="your-email@example.com"
